// Prisma schema for MangaVerse Phase 4
// https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// Auth.js Required Models
// ============================================

model User {
  id            String    @id @default(cuid())
  username      String    @unique
  email         String?   // Optional - not used for auth
  emailVerified DateTime?
  password      String?   // Hashed password for credentials auth
  name          String?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts   Account[]
  sessions   Session[]
  userSeries UserSeries[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// MangaVerse Data Models
// ============================================

model Series {
  id              String   @id @default(cuid())
  title           String
  type            String   // manga, manhwa, anime
  externalId      String?  // MAL ID from Jikan API (canonical identifier)
  thumbnailUrl    String?  // Cover image URL for visual identification
  alternateTitles String[] // Synonyms for library search matching

  users UserSeries[]

  @@unique([externalId, type])
  @@index([title])
}

model UserSeries {
  id           String   @id @default(cuid())
  userId       String
  seriesId     String
  status       String   // reading, completed, on-hold
  lastProgress String?
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  rating       Float?   @default(0) // 1.0 - 5.0 scale
  ratedAt      DateTime?

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  series Series @relation(fields: [seriesId], references: [id], onDelete: Cascade)

  @@unique([userId, seriesId])
}
